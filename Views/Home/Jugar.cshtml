<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="estilo.css">
</head>

<body>
  <div class="playerStats">
    <h4 class="player">Nombre del usuario: @ViewBag.Username</h4>
    <h4 class="player">Puntos: @ViewBag.puntos</h4>
  </div>

  <div class="juego">
    <div class="pregunta">
      <h2>@ViewBag.PreguntaActual.Enunciado</h2>
      <img src="@ViewBag.PreguntaActual.Foto" width="80%">
    </div>
    @foreach (Respuesta item in ViewBag.OpcionesPregunta)
    {
      <a href='@Url.Action("VerificarRespuesta", new{idPregunta=@item.FkPregunta, idRespuesta=item.IdRespuesta})'
        type="button" class="btn btn-light">@item.Contenido</a>
    }
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>

</html>
