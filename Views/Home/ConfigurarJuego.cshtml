<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="site.css">
</head>

<body>




  <form action='@Url.Action("Comenzar")'>
    <div class="formulario">
      <h1>Configura el juego</h1>
      <div>
        <h3>Dificultad</h3>
        <select name="dificultad">
          <option value="2">Facil</option>
          <option value="1">Dificil</option>
          <option value="-1">Todas</option>
        </select>
      </div>

      <div>
        <h3>Categoria</h3>
        <select name="categoria" id="">
          <option value="1">Deporte</option>
          <option value="2">Geografia</option>
          <option value="3">Ciencia</option>
          <option value="4">Cine</option>
          <option value="5">Historia</option>
          <option value="-1">Todas</option>
        </select>
      </div>
      <div>
        <h3>Nombre de usuario</h3>
        <label> Nombre</label>
        <input autocomplete="off" type="text" name="username" required placeholder="Ingrese su nombre">
      </div>


      <input type="submit" value="Iniciar" class="btn btn-success">
    </div>
  </form>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>

</html>
